{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^0.15.0-rc.13",
    "lerna": "^2.9.1",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}

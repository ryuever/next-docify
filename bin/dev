#!/usr/bin/env node

const program = require('commander');
const chalk = require('chalk');
const tcpPortUsed = require('tcp-port-used');

program
  .description('start a dev mode servered application')
  .option('--port <port>', 'start server port')
  .on('--help', function() {
    console.log('  Examples:');
    console.log();
    console.log('    $ next-notify dev');
    console.log();
  });

program.parse(process.argv);

require('babel-register')({
  babelrc: false,
  plugins: [
    'transform-class-properties',
    'transform-object-rest-spread',
  ],
  ignore: /node_modules\/(?!next-docify)/,
  presets: ['react', 'env'],
});

const port = parseInt(program.port, 10) || 3000;

tcpPortUsed
  .check(port, 'localhost')
  .then(function(inUse) {
    if (inUse) {
      console.error(chalk.red('Port ' + port + ' is in use'));
      process.exit(1);
    } else {
      console.log('start in');
      // start local server on specified port
      const server = require('../server').default;
      server(port);
    }
  })
  .catch(function(ex) {
    setTimeout(function() {
      throw ex;
    }, 0);
  });


